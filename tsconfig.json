{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "baseUrl": "src",
    "paths": {
      "@directive/*": ["app/directives/*"],
      "@service/*": ["app/services/*"],
      "@model/*": ["app/models/*"],
      "@core/*": ["app/core/*"],
      "@pages/*": ["app/pages/*"],
      "@shared/*": ["app/shared/*"],
      "@env/*": ["environments/*"],
      
    }
  }
}
